	<% @seeds[0] += " and " %>
<% elsif @seeds.length > 2 %>
	<% 1.upto(@seeds.length - 1) do |index| %>
		<% @seeds[index - 1] += ", " %>
	<% end %>
	<% @seeds[@seeds.length - 2] += "and " %>
<% end %>


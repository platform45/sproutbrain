<div id="form">
<h2>New Seed: </h2>

<%= form_for(@seed) do |f| %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :minimum_days_to_sprout %><br>
    <%= f.number_field :min_duration %><br>

    <%= f.label :maximum_days_to_sprout %><br>
    <%= f.number_field :max_duration %><br>

    <%= f.label :family %><br>
    <%= f.text_field :family %><br>

    <%= f.label :nutrition_facts %><br>
    <%= f.text_area :nutrition %><br>

    <%= f.label :tips? %><br>
    <%= f.text_area :tips %><br>  
    
    <%= f.submit %>
  </p>

<% end %>

<p><%= link_to 'Cancel', seeds_path %></p>
</div>

<div id="form_img">
<img width="300" height="300" src="http://ldspictures.files.wordpress.com/2007/12/faithlarge.jpg" style="outline: none; text-decoration: none; -ms-interpolation-mode: bicubic; width: auto; max-width: 100%; float: center; clear: both; display: block;" align="center" />
</div>